<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.restfriedchicken.android" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".RestfriedChickenApp"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".orders.DisplayMyOrdersActivity"
            android:label="@string/title_activity_display_my_orders"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".orders.DisplayMyOrdersGroupedByStatusActivity"
            android:label="@string/title_activity_display_my_orders"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".orders.DisplayMyOrderActivity"
            android:label="@string/title_activity_display_my_order"
            android:parentActivityName=".orders.DisplayMyOrdersActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".orders.DisplayMyOrdersActivity" />
        </activity>
    </application>


</manifest>
